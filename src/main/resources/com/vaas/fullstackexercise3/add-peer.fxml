<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.vaas.fullstackexercise3.AddPeer"
          alignment="CENTER"
          hgap="10" vgap="10">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40" />
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="100" />
    </columnConstraints>

    <Label text="Enter an IP:port to initiate connection:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
        <TextField fx:id="seedField" prefHeight="40" HBox.hgrow="ALWAYS" />
        <Button onAction="#handleConnectButtonAction" prefHeight="40" text="Connect" />
    </HBox>

</GridPane>
